<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/horizontal_margin_8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="7dp"
        app:cardElevation="22dp">
        <LinearLayout
            android:clickable="true"
            android:onClick="onElectronicsClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true">
            <ImageView
                android:contentDescription="@string/electronics"
                android:scaleType="fitCenter"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/electronics_category"/>
            <LinearLayout
                android:layout_marginStart="@dimen/horizontal_margin_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="Samsung Electronics Galaxy Tab S7 FE 2021 Android Tablet 12.4â€ Screen WiFi 256GB S Pen Included Long-Lasting Battery Powerful Performance, Mystic Black"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:text="Price: $35"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:text="Color: Black"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>